{% extends getPartial('page-design') %}

{% set itemSort             = request.get("itemSorting") | default( config('Ceres.sort.defaultSorting') ) | split('_') %}
{% set orderBy              = itemSort[0] %}
{% set orderByKey           = itemSort[1] | default('ASC') %}
{% set variationShowType    = config("Ceres.item.variation_show_type") %}
{% set categoryParams = {
'variationShowType' : config("Ceres.item.variation_show_type"),
'itemsPerPage'      : request.get("items_per_page") | default( config('Ceres.pagination.defaultItemsPerPage') ),
'orderBy'           : itemSort[0],
'orderByKey'        : itemSort[1] | default('ASC'),
'facetParams'       : request.get("facets")
} %}

{% set page = request.get("page") | default(1) %}

{% set itemsPerPage = config("Ceres.pagination.defaultItemsPerPage") %}
{% if request.get("items") %}
    {% set itemsPerPage = request.get("items") %}
{% endif %}

{% set paginatedResult      = services.itemLoader.loadForTemplate('Ceres::ItemList.ItemListView', itemLoaderPresets.categoryList, {'categoryId':category.id, 'page':page, 'itemsPerPage':itemsPerPage, 'facets': facetParams}) %}

{% set itemList             = paginatedResult.documents %}
{% set paginationType       = config("Ceres.pagination.position") %}

{% block PageBody %}

    {{ component( "Ceres::ItemList.Components.Filter.ItemFilterList") }}
    {{ component( "Ceres::ItemList.Components.Filter.ItemFilterTagList") }}
    {{ component( "Ceres::ItemList.Components.ItemList") }}
    {{ component( "Ceres::ItemList.Components.CategoryImageCarousel") }}
    {{ component( "Ceres::ItemList.Components.ItemListSorting") }}
    {{ component( "Ceres::ItemList.Components.ItemsPerPage") }}
    {{ component( "Ceres::ItemList.Components.Pagination") }}

    <resource name="facetParams" :data="[]"></resource>
    <resource name="facets" :data="{{ paginatedResult.facets | json_encode }} || []"></resource>
    <resource name="itemList" :data="{ total: {{  paginatedResult.total | json_encode() }} }"></resource>

    <div class="categoriegrid page-content container-max">
		<div class="row is-flex">
			<div class="col-lg-3 hidden-md-down">
				<div class="sidebar-categories">
					<div class="category-title">Kategorien</div>
                        <ul>



                            {% for category in services.category.getNavigationTree("item", lang) %}

                             {% if category.children is empty %}
                                {% if services.category.isActive(category) %}
                                     <li class="nav-item active">
                                         <a class="nav-link" href="{{ services.category.getURL( category, lang ) }}">{{ category.details.first.name }}</a>
                                     </li>
                                {% else %}
                                    <li class="nav-item">
                                         <a class="nav-link" href="{{ services.category.getURL( category, lang ) }}">{{ category.details.first.name }}</a>
                                     </li>
                                {% endif %}
                             {% else %}
                                 <li class="nav-item hasChildren">
                                     <a class="nav-link" id="{{ category.details.first.name }}_Menu" href="{{ services.category.getURL( category, lang ) }}"> {{ category.details.first.name }}
                                     </a>
                                     <ul>
                                         {% for subcat in category.children %}
                                            {% if subcat.children is empty %}
                                             <li>
                                                 <a class="nav-link" href="{{ services.category.getURL( subcat, lang ) }}">{{ subcat.details.first.name }}</a>
                                             </li>
                                            {% else %}
                                                <li class="nav-item hasChildren">
                                                    <a class="nav-link" href="{{ services.category.getURL( subcat, lang ) }}">{{ subcat.details.first.name }}</a>
                                                    <ul>
                                                        {% for subsubcat in subcat.children %}
                                                            {% if subsubcat.children is empty %}
                                                            <li class="nav-item">
                                                                 <a class="nav-link" href="{{ services.category.getURL( subsubcat, lang ) }}">{{ subsubcat.details.first.name }}</a>
                                                             </li>
                                                             {% else %}
                                                                 <li class="nav-item hasChildren">
                                                                     <a class="nav-link" href="{{ services.category.getURL( subsubcat, lang ) }}">{{ subsubcat.details.first.name }}</a>
                                                                     <ul>
                                                                        {% for subsubsubcat in subsubcat.children %}
                                                                            <li class="nav-item">
                                                                                 <a class="nav-link" href="{{ services.category.getURL( subsubsubcat, lang ) }}">{{ subsubsubcat.details.first.name }}</a>
                                                                             </li>
                                                                        {% endfor %}
                                                                     </ul>
                                                                 </li>
                                                             {% endif %}
                                                        {% endfor %}
                                                    </ul>
                                             </li>
                                            {% endif %}
                                         {% endfor %}
                                     </ul>
                                 </li>
                             {% endif %}
                         {% endfor %}
                        </ul>
				</div>
			</div>
		
			<div class="col-lg-9">
		        <div class="list-controls m-b-3">
                    <div class="list-controls-inner">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="list-wrapper">
                                    <item-list-sorting template="#vue-item-list-sorting" :sort-data="{{ config("Ceres.sort.data") | split(', ') | json_encode() }}"></item-list-sorting>
                                    <items-per-page template="#vue-items-per-page" :pagination-values="{{ config("Ceres.pagination.values") | split(', ') | json_encode() }}"></items-per-page>
                                    <item-filter-list :facets="{{ paginatedResult.facets | json_encode }}"></item-filter-list>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# TAGS #}
                    <item-filter-tag-list></item-filter-tag-list>
                </div>

                <div class="row">
                    <div class="col-xs-12">

                        <ul id="twig-rendered-item-list" class="product-list row grid" v-is-loading-watcher>
                            {% for item in itemList %}
                                <li class="col-xs-12 col-sm-6 col-md-4">
                                    {% include "Kiom::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                                </li>
                            {% endfor %}
                        </ul>

                        <div id="vue-rendered-item-list" style="display:none">
                            <item-list template="#vue-item-list" :category-id="{{ category.id }}"></item-list>
                        </div>

                    </div>
                </div>
	        </div>

        </div>
        
    </div>
    <div class="list-controls m-b-3">
        <div class="col-xs-12">
            <pagination template="#vue-pagination"></pagination>
        </div>
    </div>
{% endblock %}