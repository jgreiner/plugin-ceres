{{ component( "Ceres::Item.Components.QuantityInput" ) }}

<script type="x/template" id="vue-add-to-basket">
    <div>

        <div v-if="showQuantity">
            <div class="row no-gutters">
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <quantity-input :value="1" @quantity-change="updateQuantity" template="#vue-quantity-input"></quantity-input>
                </div>
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <button href="#" class="btn btn-block btn-primary basket-btn" @click="addToBasket()">
                        <span>In den </span>Warenkorb
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>

        <div v-else>
            <div class="AddToBasket-inner">
                <div class="eek-sign" data-toggle="modal" data-target="#availability-modal-${_uid}">
                    <span>A++</span>
                </div>
                <button type="button" class="btn btn-block btn-buy" @click="directToItem()">
                    Jetzt ansehen
                </button>
                <div class="availability-preview" v-tooltip data-toggle="tooltip" data-placement="top" title="Lieferbar in 1-2 Werktagen">
                    <i class="fa fa-truck" aria-hidden="true"></i>
                </div>
            </div>
            
            {# maybe use the button for wishlist #}
            {#<button type="button" class="btn btn-primary" @click="directToItem()">#}
                {#<i class="fa fa-arrow-right" aria-hidden="true"></i>#}
            {#</button>#}

            <div class="modal fade" id="availability-modal-${_uid}" tabindex="-1" role="dialog" aria-labelledby="availability-modal-${_uid}" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="availability-modalLabel">Energieeffizienzklasse: A++</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <img class="img-fluid" :src="item.images.all[0].urlMiddle | json">
                  </div>
                </div>
              </div>
            </div>
            
        </div>
    </div>

</script>