{{ component( "Ceres::Item.Components.QuantityInput" ) }}

<script type="x/template" id="vue-add-to-basket">
    <div>

        <div v-if="showQuantity">
            <div class="row no-gutters">
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <quantity-input :value="1" @quantity-change="updateQuantity" template="#vue-quantity-input"></quantity-input>
                </div>
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <button href="#" class="btn btn-block btn-primary basket-btn" @click="addToBasket()">
                        <span>In den </span>Warenkorb
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>

        <div v-else>
            <div class="AddToBasket-inner">
                <div class="eek-sign">
                    <a :href="item.images.all[item.images.all.length - 1].url | json" data-lightbox="single-big-image-gallery"><span>A++</span></a>
                </div>
                <button type="button" class="btn btn-block btn-buy" @click="directToItem()">
                    Jetzt ansehen
                </button>
                <div class="availability-preview availability-${item.variation.availability.id}" v-tooltip data-toggle="tooltip" data-placement="top"
                :title="!item.variation.releasedAt ? item.variation.availability.names[0].name : item.variation.releasedAt">
                <i class="fa fa-truck" aria-hidden="true"></i>
                </div>
            </div>
            
        </div>
    </div>

</script>